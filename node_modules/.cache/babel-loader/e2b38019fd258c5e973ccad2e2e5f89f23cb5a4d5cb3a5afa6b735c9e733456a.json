radius: 10px;\n  background: #ffffff;\n  box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);\n}\n\n.img-fluid {\n  max-width: 100%;\n  height: auto;\n  margin-bottom: 20px;\n}\n\n.static-gallery {\n  display: flex;\n  gap: 10px;\n  margin-bottom: 20px;\n}\n\n.xray-image {\n  width: calc(20% - 10px); /* Imposta le immagini statiche su cinque colonne */\n  height: auto;\n}\n\n.carousel-container {\n  position: relative;\n  width: 100%;\n  max-width: 600px;\n  margin: 0 auto 20px;\n}\n\n.carousel {\n  display: flex;\n  transition: transform 0.5s ease;\n  width: 100%;\n  overflow: hidden;\n}\n\n.carousel img {\n  width: 100%;\n  display: none;\n  border-radius: 8px;\n}\n\n.carousel img.active {\n  display: block;\n}\n\n.carousel-control {\n  position: absolute;\n  top: 50%;\n  width: 30px;\n  height: 30px;\n  background-color: rgba(0, 0, 0, 0.5);\n  color: #fff;\n  border: none;\n  font-size: 18px;\n  transform: translateY(-50%);\n  cursor: pointer;\n  z-index: 1;\n}\n\n.carousel-control.prev {\n  left: -35px;\n}\n\n.carousel-control.next {\n  right: -35px;\n}\n\n.indicators {\n  display: flex;\n  justify-content: center;\n  gap: 10px;\n  margin-top: 10px;\n}\n\n.indicators span {\n  display: inline-block;\n  width: 10px;\n  height: 10px;\n  background-color: #d9d9d9;\n  border-radius: 50%;\n  cursor: pointer;\n}\n\n.indicators .active-dot {\n  background-color: #007bff;\n}\n\n.btn-container {\n  display: flex;\n  flex-direction: column;\n  align-items: center;\n  gap: 0px;\n}\n\n.btn-group-horizontal {\n  display: flex;\n  gap: 10px;\n}\n\n.btn {\n  padding: 0.5rem 2rem;\n  font-size: 14px;\n  border-radius: 10px;\n  box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);\n  transition: background-color 0.3s, transform 0.3s;\n}\n\n.btn-secondary {\n  background-color: #d9d9d9;\n  color: black;\n}\n\n.btn-secondary:hover {\n  background-color: #5a6268;\n  color: white;\n  transform: translateY(-1.5px);\n}\n\n.btn-primary {\n  margin-top: 20px;\n  background-color: #007bff;\n  color: white;\n  width: 470px;\n}\n\n.btn-primary:hover {\n  background-color: #0056b3;\n  transform: translateY(-1.5px);\n}\n\n.btn-register {\n  width: 230px;\n}\n\n@keyframes fadeIn {\n  from {\n    opacity: 0;\n    transform: translateY(-20px);\n  }\n  to {\n    opacity: 1;\n    transform: translateY(0);\n  }\n}\n</style>\n"],"mappings":"AA+CA,eAAe;EACbA,IAAI,EAAE,UAAU;EAChBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,YAAY,EAAE,CAAC;MACfC,mBAAmB,EAAE,CAAC,oBAAoB,EAAE,oBAAoB,EAAE,oBAAoB,EAAE,oBAAoB;IAC9G,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACPC,OAAOA,CAACC,IAAI,EAAE;MACZC,YAAY,CAACC,OAAO,CAAC,UAAU,EAAEF,IAAI,CAAC;MACtC,IAAI,CAACG,OAAO,CAACC,IAAI,CAAC,WAAW,CAAC;IAChC,CAAC;IACDC,SAASA,CAAA,EAAG;MACV,IAAI,CAACT,YAAW,GAAI,CAAC,IAAI,CAACA,YAAW,GAAI,CAAC,IAAI,IAAI,CAACC,mBAAmB,CAACS,MAAM;IAC/E,CAAC;IACDC,SAASA,CAAA,EAAG;MACV,IAAI,CAACX,YAAW,GAAI,CAAC,IAAI,CAACA,YAAW,GAAI,IAAI,IAAI,CAACC,mBAAmB,CAACS,MAAM,IAAI,IAAI,CAACT,mBAAmB,CAACS,MAAM;IACjH,CAAC;IACDE,SAASA,CAACC,KAAK,EAAE;MACf,IAAI,CAACb,YAAW,GAAIa,KAAK;IAC3B;EACF;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}